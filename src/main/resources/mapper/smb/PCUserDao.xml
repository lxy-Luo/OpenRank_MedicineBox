<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qmx.smedicinebox.sys.dao.PCUserDao">

<!--插入用户sql-->
    <insert id="insert">
        insert into PCuser
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="username != null">username,</if>
            <if test="password != null">password,</if>
            <if test="name != null">name,</if>
            <if test="phone != null">phone,</if>
            <if test="email != null">email,</if>
            <if test="avatar != null">avatar,</if>
            <if test="role != null">role,</if>
            <if test="sex != null">sex,</if>
            <if test="info != null">info,</if>
            <if test="device != null">device,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="username != null">#{username},</if>
            <if test="password != null">#{password},</if>
            <if test="name != null">#{name},</if>
            <if test="phone != null">#{phone},</if>
            <if test="email != null">#{email},</if>
            <if test="avatar != null">#{avatar},</if>
            <if test="role != null">#{role},</if>
            <if test="sex != null">#{sex},</if>
            <if test="info != null">#{info},</if>
            <if test="device != null">#{device},</if>
        </trim>
    </insert>

    <select id="selectByUsername" resultType="com.qmx.smedicinebox.sys.entity.PCUser">
        select * from PCuser where username = #{username}
    </select>

    <select id="selectById" resultType="com.qmx.smedicinebox.sys.entity.PCUser">
        select * from PCuser where id = #{id}
    </select>

    <select id="selectAll" resultType="com.qmx.smedicinebox.sys.entity.PCUser">
        select * from PCuser
        <where>
            <if test="username != null and username != '' "> and username = #{username}</if>
            <if test="name != null"> and username like concat('%',#{name},'%')</if>
        </where>
        order by id desc
    </select>
    <update id="updateById">
        update PCuser
        <set>
            <if test="username != null">
                username = #{username},
            </if>
            <if test="password != null">
                password = #{password},
            </if>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="phone != null">
                phone = #{phone},
            </if>
            <if test="email != null">
                email = #{email},
            </if>
            <if test="avatar != null">
                avatar = #{avatar},
            </if>
            <if test="role != null">
                role = #{role},
            </if>
            <if test="sex != null">
                sex = #{sex},
            </if>
            <if test="info != null">
                info = #{info},
            </if>
            <if test="device != null">
                device = #{device},
            </if>
        </set>
        where id = #{id}
    </update>

    <delete id="deleteById">
        delete from PCuser where id = #{id}
    </delete>

</mapper>